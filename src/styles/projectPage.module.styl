@import "./variables.styl"

.fadeDiv
  position absolute 
  width 100%
  height 100%
  top 0 
  left 0
  background-color $background-color
  pointer-events none
  z-index 100
  animation 1.5s forwards fadeOutAnimation


@keyframes fadeOutAnimation
  0% 
    opacity 1

  50%
    opacity 1

  100% 
    opacity 0

