@import "./variables.styl"


.projectContainer
  // padding so the scrollTo lands with the padding included
  // has padding-top also for scrollTo reasons 
  // padding 3.2rem 0
  padding-bottom 6.4rem
  
.allTextContainer
  margin-top 1.6rem

.headingsContainer
.extraInfoContainer
.descriptionContainer
  margin-bottom 2.4rem

.headingsContainer
  font-size 2.2rem
  display flex
  flex-direction column

  span
    width fit-content

  .projectName
    color $background-color
    background-color $black

  .subtitle
    font-size 2.2rem
    font-style italic


.descriptionContainer
  width 32rem
  margin-right 3.2rem
  white-space: pre-line

.extraInfoContainer
  // width 32rem
  display flex
  flex-direction column

.descriptionButton
  font-size 1.6rem
  font-family $click-font-family



  