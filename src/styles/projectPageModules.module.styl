@import "./variables.styl"

.sectionDividerContainer
  border-top 1px solid black
  // position relative
  margin 1.6rem 0

.inViewEl
  // 3.2 because there's another 1.6rem padding on the sectionContainer
  // so that scrollTo scrolls with margin on the top
  margin-top 3.2rem
  height 85vh
  width 10px
  position absolute
  pointer-events none

  // background-color blue


// puts the container above the description box
// happens on full page / spread sections
.aboveDescriptionBox
  position relative
  z-index 3


// full page width spreads - no left right padding
.spread
.halfHalfSpread
.trioSpread
  min-height 95vh
  margin 3.2rem 0 // margin so reaching there there's no top padding shown
  background-color $background-color
  
// possibly overflow
.halfHalfOverflow
.trio 
.bigOverflow
.noneBig
.smallBig
  min-height 95vh
  padding 1.6rem

// contained within viewport
.halfHalfContained
.bigContained
  // not min-height since want to contain
  height 95vh
  padding 1.6rem
  display flex


.spreadContained
  height 95vh
  padding 1.6rem 0
  background-color $background-color





.spread 

  .image 
    text-align center

    img 
      max-width 100%



.spreadContained

  .video
    height 95vh
    background-color $light-grey

  .image 
    text-align center

    img 
      max-width 100%
      max-height 95vh




.trioSpread
  .row
    width 100%
    display flex
    margin-bottom 1.6rem

    .content
      flex 33%
      height unset

      img
        width 100%
    
    .video 
      max-height 100%
      height 45vh

    .content + .content 
      margin-left 1.6rem

    video
      height unset !important


.trio
  display flex

  padding 1.6rem

  .contentContainer
    display flex

    .content
      flex 33.33%
      margin-right 1.6rem

      img
        width 100%

.bigOverflow
  display flex

  .contentContainer
    width 100%
    margin-right 1.6rem
    display flex
    flex-wrap wrap

    .content 
      max-height 100%
      margin-bottom 1.6rem
      // height unset 
      height 95vh


    img
      width 100%

      // https://techstacker.com/how-to-prevent-image-stretching-with-flexbox/
      // prevents single images from stretching out to fill height
      align-self flex-start

    img + img
      margin-top 1.6rem

.smallBig
.noneBig
  display flex 

  .contentContainer
    display flex 

    .col1
      flex 33.33%
      margin-right 1.6rem

      img 
        width 100%

    .col2 
      flex 66.66%
      margin-right 1.6rem

      img 
        width 100%


.halfHalfContained

  .contentContainer
    width 100%
    height 100%
    display flex
    // flex-direction row-reverse
    justify-content right

    .content 
      max-width 50%
      max-height 100%
      margin-right 1.6rem

      img
        max-width 100%
        max-height 100%



.halfHalfSpread
  
  .row
    width 100%
    display flex
    margin-bottom 1.6rem

    .content
      flex 50%
      height unset

      img
        width 100%
    
    .video 
      max-height 100%
      height 50vh

    .content + .content 
      margin-left 1.6rem

    video
      height unset !important



.halfHalfOverflow
  display flex

  .contentContainer
    display flex

    .content
      flex 50%
      margin-right 1.6rem

      img
        width 100%


.bigContained

  .contentContainer
    width 100%
    height 100%
    margin-right 1.6rem

    .content 
      max-height 100%
      // height unset // tenatively uncommented
      background-color $light-grey

    // https://stackoverflow.com/questions/1891857/how-do-you-stretch-an-image-to-fill-a-div-while-keeping-the-images-aspect-rat
    // keeps image inside div without expanding the div out itself
    img
      max-height 100%
      max-width 100%

      // aligns image to the right
      float right 


.text
  font-size 4.8rem
  // padding-top 6.4rem
  min-height 95vh
  padding 1.6rem
  display flex


  .contentContainer
    width 100%

    div
      margin-right 1.6rem

    // uncomment everything below for 
    // text to fit into col1 as a specific width

    // display flex 

    // .col1
    //   flex 66.66%
    //   margin-right 1.6rem

    // .col2 
    //   flex 33.33%
    //   margin-right 1.6rem
  div 
    white-space pre-line

  ol
    margin 0
    padding-left 5rem

  ul
    margin 0
    padding 0
    li
      list-style-type none

      &:before 
        // content "ï¼Š"
        // vertical-align sub
        content url(/images/Astericks.svg)
        position relative 
        top -3px
        padding-right 0.8rem
        // font-size 4.8rem

