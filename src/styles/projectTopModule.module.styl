.col3
  width 100%
  margin-right 3.2rem

  img 
    width 100%


.name
.subtitle
  font-size 2.2rem

.name
  color $background-color
  background-color $black
  width max-content

.subtitle
  font-style italic
  margin-bottom 3.2rem



.tableContainer
  // margin 1.6rem 0 6.4rem 0 
  // width 42rem

  .tableRow
    display flex
    width 100%

    .tableCell
      border 0.5px solid black
      display flex
      flex-direction column
      padding 0.4rem
      width 100%
      // width fit-content
      
    // https://stackoverflow.com/questions/12692089/preventing-double-borders-in-css
    .tableCell + .tableCell
      border-left 0
      
    .cellTitle
      font-size 1.4rem
      font-style italic
      width max-content

    .type
      flex-grow 1
    .tools
      flex-grow 2
    .year
      flex-grow 1

    .type
    .tools
    .year
      border-bottom 0

    .task
    .idea
      line-height 1.25




